<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020824"
    android:orientation="vertical"
    tools:context=".ArticlesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:id="@+id/tvBlogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blog Codai"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBlogSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artigos, tutoriais e muito mais."
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnWriteArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Escrever artigo" />

            <EditText
                android:id="@+id/etSearchArticles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Pesquisar artigos, temas ou autores..."
                android:textColorHint="@android:color/darker_gray" />

            <!-- Filtros de Categoria -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Filtrar por categoria:"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupArticleCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAllArticles"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todas"
                        android:checkable="true"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPythonArticles"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#Python"
                        android:checkable="true" />
                        
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipUiUxArticles"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#UI/UX"
                        android:checkable="true" />

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <!-- Lista de Artigos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ãšltimos artigos"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvArticles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:listitem="@layout/item_article" />

            <!-- Estado Vazio -->
            <LinearLayout
                android:id="@+id/emptyStateArticlesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nenhum artigo encontrado. Seja o primeiro a escrever algo!"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/btnCreateFirstArticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Criar primeiro artigo"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
